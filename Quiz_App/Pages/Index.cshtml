@page
@model IndexModel
@{
    ViewData["Title"] = "Quiz App";
}

@using Quiz_App.Models


<div class="text-center">
    <h1>Choose a quiz to start</h1>
    <div class="items-list">
        @for (int i = 0; i< Model.quizzes.Count<Quiz>(); i++)
        {
                
            <div>
                <h2>@Model.quizzes[i].Title</h2>
                <div class="img-container">
                    <div>
                        <p>@Model.quizzes[i].Image</p>
                    </div>
                </div>
                <a asp-page="/QuizPage" asp-route-quizIndex=@i>Answer Quiz</a>
            </div>
        }
    </div>
</div>

